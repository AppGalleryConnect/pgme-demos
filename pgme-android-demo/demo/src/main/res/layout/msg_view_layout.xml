<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/bg_yxdmtyq_008"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/msg_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/msg_view_rece_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:text="@string/send_to"
                android:textColor="#c9c3f0" />

            <EditText
                android:id="@+id/msg_view_rec_id"
                style="@style/EditStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/bg_msg_send"
                android:hint="@string/receiver_id_placeholder"
                android:textColorHint="#E8E7EF" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg_view_people_count"
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="100dp"
            android:minWidth="60dp"
            android:textColor="#FFF"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msg_view_content_rv"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/msg_view_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_yxdmtyq_009"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_view_content_rv"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/msg_view_content_et"
            style="@style/EditStyle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:alpha="0.5"
            android:background="@drawable/bg_msg_send"
            android:hint="@string/msg_content_placeholder"
            android:textColorHint="#E8E7EF" />

        <Button
            android:id="@+id/msg_view_send"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/button_2"
            android:enabled="false"
            android:text="@string/send_msg"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>