<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/receive_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receive_msg_user_id"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textColor="#FFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/receive_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/msg_content_bg"
            android:padding="6dp"
            android:gravity="center"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_msg_layout"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/send_msg_user_id"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#fff" />
        </LinearLayout>

        <TextView
            android:layout_gravity="right"
            android:id="@+id/send_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/msg_content_bg"
            android:padding="6dp" />

        <TextView
            android:id="@+id/send_msg_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/send_failed_tip"
            android:textColor="#f00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receive_audio_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receive_audio_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/receive_play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_mic_on" />

            <TextView
                android:id="@+id/receive_audio_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/msg_content_bg"
                android:gravity="center"
                android:padding="6dp"
                android:layout_marginStart="5dp"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_audio_layout"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/send_audio_user_id"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/btn_mic_on" />

            <TextView
                android:layout_gravity="right"
                android:id="@+id/send_audio_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/msg_content_bg"
                android:padding="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/send_audio_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/send_failed_tip"
            android:textColor="#f00" />
    </LinearLayout>
</LinearLayout>
