<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:background="@drawable/bg_yxdmtyq_001"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ScrollView
        android:id="@+id/audio_msg_scroll"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/bg_yxdmtyq_002">

        <LinearLayout
            android:id="@+id/audioMsgList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/audio_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/bg_audio"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/btn_speaker_on" />

        <TextView
            android:id="@+id/speaker_audio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30px" />

        <TextView
            android:id="@+id/audio_view_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="30px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/audio_msg_scroll"
        android:minHeight="45dp"
        android:paddingEnd="5dp">

        <Button
            android:id="@+id/btnBack"
            style="@style/ButtonStyle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_3"
            android:text="@string/back"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnRecord"
            style="@style/ButtonStyle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_3"
            android:text="@string/btn_record"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>