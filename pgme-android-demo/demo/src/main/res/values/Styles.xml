<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">34px</item>
        <item name="android:textColor">@color/white</item>
        <item name="minHeight">45dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">42px</item>
    </style>

    <style name="MemberDialog" parent="@android:style/Theme.NoTitleBar">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--是否允许背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box</item>
        <item name="android:textSize">42px</item>
    </style>

</resources>